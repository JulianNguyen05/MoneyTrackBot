<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="14dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ─────────────  Dòng ngày + số tiền nhỏ ───────────── -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Th 2, 6 thg 10, 2025"
                android:textSize="13sp"
                android:textColor="@color/light_gray_hint"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/tvAmountSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-15.000đ"
                android:textColor="@color/light_gray_hint"
                android:textSize="13sp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>

        <!-- ─────────────  Dòng icon + category + note + amount ───────────── -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Icon category -->
            <ImageView
                android:id="@+id/imgCategory"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/bg_circle_light"
                android:padding="8dp"
                android:src="@mipmap/ic_food" />

            <!-- Texts -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thức ăn &amp; Đồ uống"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cà phê"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

            <!-- Số tiền lớn -->
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15.000đ"
                android:textColor="@color/obese"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_triangle_down"
                app:drawableTint="@color/obese"
                android:drawablePadding="6dp"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
