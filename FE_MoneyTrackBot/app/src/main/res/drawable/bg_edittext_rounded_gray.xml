<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền màu xám nhạt -->
    <solid android:color="#F2F2F2" />

    <!-- Bo góc -->
    <corners android:radius="12dp" />

    <!-- Viền mảnh, tinh tế -->
    <stroke
        android:width="1dp"
        android:color="#D6D6D6" />

    <!-- Padding bên trong -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp" />

</shape>
